<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/article1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="410dp"
                android:rotation="270"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/blue_waves" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/abel"
                android:letterSpacing="0.45"
                android:text="Featured"
                android:textAllCaps="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/abhaya_libre_medium"
                android:text="Blue Ocean \nWaves Crash"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:lineSpacingExtra="-10dp"
                android:textSize="40dp" />
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_logo" />
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="@string/body1_text"
                android:textSize="19sp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="65dp"
                android:layout_marginHorizontal="65dp"
                android:fontFamily="@font/abhaya_libre_medium"
                android:lineSpacingExtra="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/article2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="410dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/bridge_photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/abel"
                android:letterSpacing="0.45"
                android:text="Featured"
                android:textAllCaps="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/abhaya_libre_medium"
                android:text="Long Exposure \nRiver Bridge"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:lineSpacingExtra="-10dp"
                android:textSize="40dp" />
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_logo" />
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="@string/body2_text"
                android:textSize="19sp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="65dp"
                android:layout_marginHorizontal="65dp"
                android:fontFamily="@font/abhaya_libre_medium"
                android:lineSpacingExtra="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>